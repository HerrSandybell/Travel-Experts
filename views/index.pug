extends layout.pug

block title
  title Travel Experts: Homepage

block style
  link(rel='stylesheet' href='css/gallery.css')

block currentUrl
  - let currentUrl = 'no-bg'

block header
  header.hero-section.sitting-man
    h1 Travel Experts
    p
      | We will find the perfect destination 
      br
      em for you.
    a.button.call-to-action(href='register') Sign up now!

block main-content
  -console.log(imgList)
  section#gallery.gallery.flex-column

block form
  div#contact-us.letter-box.center
    form.letter-paper(action='https://formspree.io/xjvaarpr' method='POST')
      fieldset.center.flex-column
        legend Contact Us
        
        label.required(for='name') Your name:
        input#name(type='text' name='name' required)

        label.required(for='email') Your email:
        input#email(type='text' name='email' required)

        label.required(for='message') Your message:
        textarea#message(name='message' required)

        button.button(type='submit') Send

block scripts
  script(src='js/gallery.js')